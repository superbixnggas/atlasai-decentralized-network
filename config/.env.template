# AtlasAI - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# ===============================
# SOLANA BLOCKCHAIN CONFIGURATION
# ===============================
# Solana RPC Endpoint (mainnet for production, devnet for testing)
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
SOLANA_RPC_DEVNET="https://api.devnet.solana.com"

# X402 Token Configuration
X402_MINT_ADDRESS="your_x402_token_mint_address_here"
X402_TOKEN_SYMBOL="X402"
X402_TOKEN_DECIMALS=6

# Wallet Configuration
WALLET_PRIVATE_KEY="your_wallet_private_key_here" # For testing only
TRANSACTION_FEE_SOL="0.01"

# ===============================
# IPFS STORAGE CONFIGURATION
# ===============================
# Pinata IPFS (Recommended)
PINATA_API_KEY="your_pinata_api_key"
PINATA_SECRET_KEY="your_pinata_secret_key"
PINATA_JWT="your_pinata_jwt_token"

# Alternative IPFS Providers
IPFS_GATEWAY="https://ipfs.io/ipfs/"
WEB3_STORAGE_TOKEN="your_web3_storage_token"
INFURA_PROJECT_ID="your_infura_project_id"
INFURA_PROJECT_SECRET="your_infura_project_secret"

# ===============================
# AI SERVICE CONFIGURATION
# ===============================
# OpenAI (Primary AI Service)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Alternative AI Services
ANTHROPIC_API_KEY="your_anthropic_claude_key"
COHERE_API_KEY="your_cohere_api_key"
GOOGLE_AI_API_KEY="your_google_ai_key"

# AI Configuration
AI_CONFIDENCE_THRESHOLD="0.8"
AI_QUALITY_SCORE_MIN="60"
AI_REJECTION_THRESHOLD="40"

# ===============================
# DATABASE CONFIGURATION
# ===============================
# PostgreSQL Connection (Primary)
DATABASE_URL="postgresql://username:password@host:port/database_name"
DATABASE_SSL="true"

# Alternative Database Providers (Supabase, Neon, etc.)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_KEY="your_supabase_service_key"

NEON_DATABASE_URL="postgresql://username:password@host:port/database_name"

# Database Configuration
DB_POOL_SIZE="10"
DB_TIMEOUT="30000"
DB_RETRIES="3"

# ===============================
# AUTHENTICATION & SECURITY
# ===============================
# JWT Secret (generate a strong random string)
JWT_SECRET="your_super_secure_jwt_secret_key_here"

# API Security
API_KEY="your_api_key_for_external_access"
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# Rate Limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="15" # minutes

# ===============================
# BACKEND SERVER CONFIGURATION
# ===============================
# Server Settings
PORT="3000"
NODE_ENV="production" # or "development"
HOST="0.0.0.0"

# Logging
LOG_LEVEL="info" # debug, info, warn, error
LOG_FILE="logs/atlasai.log"

# ===============================
# FRONTEND CONFIGURATION
# ===============================
# API Base URL (update for production)
API_BASE_URL="https://your-backend-domain.com/api"

# WebSocket Configuration
WS_URL="wss://your-backend-domain.com/ws"

# Analytics
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
MIXPANEL_TOKEN="your_mixpanel_token"

# ===============================
# MONITORING & ALERTS
# ===============================
# Health Check Configuration
HEALTH_CHECK_INTERVAL="300" # seconds
SERVICE_TIMEOUT="30" # seconds

# Error Tracking (Sentry)
SENTRY_DSN="your_sentry_dsn"

# Performance Monitoring
NEW_RELIC_LICENSE_KEY="your_newrelic_license_key"

# ===============================
# EMAIL & NOTIFICATIONS
# ===============================
# Email Service (for user notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"
FROM_EMAIL="noreply@atlasai.com"

# Push Notifications
FIREBASE_SERVER_KEY="your_firebase_server_key"
APNS_CERT_PATH="path/to/your/apns_certificate.p12"

# ===============================
# EXTERNAL INTEGRATIONS
# ===============================
# Third-party APIs
WEATHER_API_KEY="your_weather_api_key"
MAPS_API_KEY="your_google_maps_api_key"
GEOLOCATION_API_KEY="your_geolocation_api_key"

# Social Media (for sharing)
TWITTER_API_KEY="your_twitter_api_key"
TWITTER_API_SECRET="your_twitter_api_secret"
DISCORD_WEBHOOK_URL="your_discord_webhook_url"

# ===============================
# DEPLOYMENT CONFIGURATION
# ===============================
# Platform Specific
RAILWAY_TOKEN="your_railway_token"
HEROKU_API_KEY="your_heroku_api_key"
VERCEL_TOKEN="your_vercel_token"

# CDN Configuration
CLOUDFLARE_API_TOKEN="your_cloudflare_token"
CDN_URL="https://cdn.yourdomain.com"

# ===============================
# DEVELOPMENT ONLY
# ===============================
# Mock Services (for development/testing)
USE_MOCK_SERVICES="false" # Set to "true" for development
MOCK_DELAY="100" # milliseconds
DEBUG_MODE="false"

# Test Configuration
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/test_atlasai"
JEST_TIMEOUT="30000"